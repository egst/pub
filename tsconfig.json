{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "strict": true,
        "target": "es2023",
        "module": "es2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "noUncheckedIndexedAccess": true,
        "strictNullChecks": true
    },
    "include": [
        "./src/**/*.ts"
    ]
}
